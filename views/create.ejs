        <div class="form-group">
          <lable>סופרת</lable>
          <input class="form-control" placeholder="סופרת" type="text" name="book[author]">
      </div>
      <div class="form-group">
        <lable>שנת הוצאה </lable>
        <input class="form-control" placeholder="שנת הוצאה" type="number" name="book[year]">
