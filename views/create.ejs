<div class="container">
    <form style="text-align: right; " action="/createbook" method="POST">
        <div class="form-group">
            <label>שם הספר</label>
            <input class="form-control" placeholder="שם הספר" type="text" name="book[name]">
          </div>
          <div class="form-group">
            <lable>כריכה - קישור</lable>
            <input class="form-control" placeholder="תמונה" type="text" name="book[cover]">
