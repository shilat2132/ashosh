<%-include("parts/indexHead") %>
<!-- vars: id, food, index -->
<style>
    body{
        text-align: right;
    }
</style>
<div class="container">
<h1>"ערכי את הפריט "<%=food.name%></h1>
<form action="/<%=index%>/edit/<%=id%>?_method=PUT" method="POST">
    <div class="form-group">
        <select class="form-control" name="cake[category]">
          <option >עוגות</option>
          <option>עוגיות</option>
          <option>מארזים</option>
          <option>ללא גלוטן</option>
          <option>שמרים</option>  
        </select>
      </div>
    
    <div class="form-group">
        <lable>שם המוצר</lable>
        <input class="form-control" value="<%=food.name%>" type="text" name="cake[name]">
    </div>

    <div class="form-group">
        <lable>תמונה - קישור</lable>
        <input class="form-control" value="<%=food.img%>" type="text" name="cake[img]">
    </div>
    <div class="form-group">
        <lable>מחיר </lable>
        <input class="form-control" value="<%=food.price%>" type="number" name="cake[price]">
    </div>
    <div class="form-group">
        <label>חלבי/ פרווה</label>
        <select class="form-control" name="cake[condition]">
          <option >חלבי</option>
          <option>פרווה</option>
        </select>
      </div>
    <div class="form-group">
        <input class="btn bg-primary" class="form-control" type="submit" >
    </div>
</form>
<form action="/<%=index%>/delete/<%=id%>?_method=DELETE" method="POST">
<button class="btn bg-danger">מחקי</button>
</form>
</div>
<%-include("parts/footer") %>
