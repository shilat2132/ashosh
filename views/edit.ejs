<%-include("parts/showHead") %>
<!-- vars: id, book -->
<style>
    body{
        text-align: right;
    }
</style>
<div class="container">
<h1>עריכת ספר</h1>
<form action="/updatebook/<%=id%>?_method=PUT" method="POST">
  <div class="form-group">
    <lable>קצת עליי </lable>
    <textarea class="form-control" name="book[about]"><%=book.about%></textarea>
  </div>
    <div class="form-group">
        <lable>שם הספר</lable>
        <input class="form-control" value="<%=book.name%>" type="text" name="book[name]">
    </div>

    <div class="form-group">
      <lable>כריכה - קישור</lable>
      <input class="form-control" value="<%=book.cover%>" type="text" name="book[cover]">
  </div>

  <div class="form-group">
    <lable>סופרת</lable>
    <input class="form-control"  value="<%=book.author%>" type="text" name="book[author]">
</div>
<div class="form-group">
  <lable>שנת הוצאה </lable>
  <input class="form-control" value="<%=book.year%>" type="number" name="book[year]">
</div>
<div class="form-group">
  <lable>מחיר </lable>
  <input class="form-control" value="<%=book.price%>" type="text" name="book[price]">
</div>

<div class="form-group">
<lable>תקציר </lable>
<textarea class="form-control" name="book[summary]"><%=book.summary%></textarea>
</div>
    <div class="form-group">
        <input class="btn bg-primary" class="form-control" type="submit" >
    </div>
</form>
<form action="/deletebook/<%=id%>?_method=DELETE" method="POST">
<button class="btn bg-danger">מחקי</button>
</form>
</div>
<%-include("parts/footer") %>
